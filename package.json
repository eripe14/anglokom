{
  "name": "anglokom",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",

    "seo:audit": "lighthouse --chrome-flags=\"--headless\" --output=html --output-path=./seo-reports/lighthouse-report.html https://anglokom.pl",
    "seo:sitemap": "next build && curl -I https://anglokom.pl/sitemap.xml",
    "seo:robots": "curl -I https://anglokom.pl/robots.txt",
    "seo:meta": "node scripts/check-meta.js",
    "seo:all": "npm run seo:meta && npm run build && npm run seo:sitemap && npm run seo:robots",

    "// Performance Scripts": "",
    "perf:bundle": "npx @next/bundle-analyzer",
    "perf:analyze": "ANALYZE=true npm run build",
    "perf:lighthouse": "lighthouse --chrome-flags=\"--headless\" --preset=perf --output=json --output-path=./seo-reports/performance.json https://anglokom.pl",

    "// Local SEO testing": "",
    "dev:seo": "next dev && open http://localhost:3000/sitemap.xml && open http://localhost:3000/robots.txt"
  },
  "dependencies": {
    "@number-flow/react": "^0.5.10",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tailwindcss/typography": "^0.5.16",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "nodemailer": "^7.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-scroll": "^1.9.3",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-scroll": "^1.8.10",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
